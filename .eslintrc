{
  "plugins": [
    "mocha",
    "json"
  ],
  "env": {
        "es6": true,
        "node": true,
        "mocha": true
    
  },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
      "indent": [
            "warn",
            4
        
      ],
      "linebreak-style": [
            "off",
            "unix"
        
      ],
      "quotes": [
            "warn",
            "single"
        
      ],
      "semi": [
            "error",
            "always"
        
      ],
      "mocha/no-exclusive-tests": "error"
    
    }
}

